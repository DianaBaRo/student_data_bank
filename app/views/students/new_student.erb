<h1>New student</h1>
<h1></h1>
<form method="POST" action="/students">
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" id="name" name="name" class="form-control" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="key_person" class="col-sm-2 col-form-label">Key person</label>
    <div class="col-sm-10">
      <input type="text" id="key_person" name="key_person" class="form-control" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="room" class="col-sm-2 col-form-label">Room</label>
    <div class="col-sm-10">
      <input type="text" id="room" name="room" class="form-control" required>
    </div>
  </div>

  <p>Choose a parent:</p>
  <fieldset class="form-group">
    <% User.all.each do |user| %>
      <div class="row">
        <div class="col-sm-10">
          <div class="form-check">
            <input class="form-check-input" type="radio" id="user_id" name="user_id" value="<%= user.id %>" required >
            <label class="form-check-label" for="user_id">
              <%= user.username %>
            </label>
          </div>
        </div>
      </div>
    <% end %>
  </fieldset>

  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" id ="submit" class="btn btn-primary">Create student</button>
    </div>
  </div>
</form>