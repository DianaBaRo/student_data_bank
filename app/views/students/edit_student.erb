<h2> Edit <%= @student.name %></h2>

<form action="/students/<%=@student.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" id="name" name="name" value="<%= @student.name %>" placeholder="Name:" required />
  <input type="text" id="key_person" name="key_person" value="<%= @student.key_person %>" placeholder="Key Person:" required />
  <input type="text" id="room" name="room" value="<%= @student.room %>" placeholder="Room:" required />
  <p><label for="user_id">Parent:</label>
  <% User.all.each do |user| %>
    <input type="radio" id="user_id" name="user_id" value="<%= user.id %>"/><%= user.username %></p>
  <% end %>

  <input type="submit" id="submit" value="Edit Student">
</form>