<form action="/signup" method="POST">
  <div class="form-group row">
    <h1>Sign Up</h1>
  </div>
  <div class="form-group row">
    <label for="username" class="col-sm-2 col-form-label">Username</label>
    <div class="col-sm-10">
      <input type="text" id="username" name="username" class="form-control" required>
    </div>
  </div>
  <div class="form-group row">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="email" id="email" name="email" class="form-control" required>
    </div>
  </div>
  <div class="form-group row">
    <label for="password" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input type="password" id="password" name="password" class="form-control" required>
    </div>
  </div>

  <fieldset class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">Are you nursery staff?</legend>
      <div class="col-sm-10">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="nursery_staff" id="nursery_staff" value="yes" checked>
          <label class="form-check-label" for="nursery_staff">
            Yes
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="nursery_staff" id="nursery_staff" value="no" checked>
          <label class="form-check-label" for="nursery_staff">
            No
          </label>
        </div>
      </div>
    </div>
  </fieldset>
  
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" id="submit" class="btn btn-primary">Sign Up</button>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
      <p>If you already have an account, please <a href="/login">Login</a></p>
    </div>
  </div>
</form>